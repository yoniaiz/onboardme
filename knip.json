{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"entry": [
		"src/ui/screens/index.ts",
		"src/ui/components/index.ts",
		"tests/**/*.test.ts",
		"tests/e2e/sandbox/*.ts"
	],
	"project": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"],
	"ignoreBinaries": ["tsc"],
	"rules": {
		"duplicates": "error"
	},
	"ignoreIssues": {
		"src/games/index.ts": ["exports"],
		"src/types/game.ts": ["exports", "types"]
	}
}
